{% extends "base.html.twig" %}

{% block title %}All categories
{% endblock %}
{% block body %}


	<h1 class="my-5">Toutes les catégories de la table category :</h1>

	{% for category in categories %}

		<div class="mb-5">

			<h2>{{ loop.index }}
				/
				{{ category.name }}
			</h2>

			{# Lien vers les programmes de la categorie : #}

			<a href="{{ path("category_show", { name: category.name }) }}">Voir les programmes</a>

		</div>

	{% else %}
		Aucune catégories trouvée.
	{% endfor %}

	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>


{% endblock %}

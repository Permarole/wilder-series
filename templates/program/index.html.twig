{% extends 'base.html.twig' %}
{% block title %}
	{{parent()}}
	- All programs
{% endblock %}
{% block body %}

	<section class="container mt-5">
		<h1 class="my-5">Toutes les séries de la table program :</h1>

		{% for program in programs %}

			<div class="mb-5">

				<h2>{{ loop.index }}
					/
					{{ program.title }}
					- Catégorie :
					{{ program.category.name }}</h2>

				<p>{{ program.summary }}</p>

				{# Lien vers la fiche de la série : #}

				<a href="{{ path("program_show", { program: program.id }) }}">Voir la fiche</a>

			</div>

		{% else %}
			Aucune série trouvée.
		{% endfor %}

		<a href="{{ path('app_index') }}">
			Retour à l'accueil
		</a>
	</section>

{% endblock %}

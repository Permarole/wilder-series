{% extends 'base.html.twig' %}


{% block title %}
	{{parent()}}
	- Série
	{{ program.title }}
{% endblock %}


{% block body %}

	<section class="container mt-5">
		<div class="media">

			<div class="media-body">

				<h1 class="mt-0">{{ program.title }}</h1>

				<h2>{{ season.description }}</h2>

				<p>Cette
					{{ season.number}}e saison sortie sur l'année
					{{ season.year }}
					contient
					{{ season.episodes|length}}
					episodes.</p>

				<ul>
					{% for  episode in episodes %}
						<li>
							<a href="{{ path("program_show_episode", { program: program.id, season: season.id, episode: episode.id }) }}">episode
								{{ episode.number }}
								-
								{{episode.title}}</a>
						</li>
					{% endfor %}
				</ul>

			</div>

		</div>


		<a href="{{ path("program_show", { program: program.id }) }}">

			Retour au programme

		</a>
	</section>
{% endblock %}

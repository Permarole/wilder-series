{% extends 'base.html.twig' %}


{% block title %}Série #{{ program.id }}
{% endblock %}


{% block body %}

	<section class="container">
		<div class="media">

			<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">

			<div class="media-body">

				<h1 class="mt-0">{{ program.title }}</h1>

				<h2>{{ season.description }}</h2>

				<p>Cette
					{{ season.number}}e saison sortie sur l'année
					{{ season.year }}
					contient
					{{ season.episodes|length}}
					episodes.</p>

				<ul>
					{% for  episode in episodes %}
						<li>
							<a href="#{#{{ path(" program_show_season_episode", { programid: program.id, seasonid: season.id, episodeid: episode.id }) }}#}">episode
								{{ episode.number }}
								-
								{{episode.title}}</a>
						</li>
					{% endfor %}
				</ul>

			</div>

		</div>


		<a href="{{ path('program_index') }}">

			Retour à la liste des programmes

		</a>
	</section>
{% endblock %}
